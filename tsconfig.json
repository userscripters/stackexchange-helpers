{
    "compilerOptions": {
        "strict": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "target": "es2019",
        "module": "es2020",
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noErrorTruncation": true,
        "skipLibCheck": true,
        "downlevelIteration": true,
        "outDir": "dist",
        "types": ["@userscripters/stackexchange-global-types"]
    },
    "exclude": ["dist"],
    "include": ["src"]
}
